<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".prog_pecs_f_Fragment">

    <Button
        android:id="@+id/ic_info_pecs_f_pompe"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="32dp"
        android:layout_marginLeft="328dp"
        android:layout_marginRight="32dp"
        android:layout_marginStart="328dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/ic_info_24px"
        android:contentDescription="@string/ic_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ic_info_pecs_f_dev_couche"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="32dp"
        android:layout_marginLeft="328dp"
        android:layout_marginRight="32dp"
        android:layout_marginStart="328dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/ic_info_24px"
        android:contentDescription="@string/ic_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ic_info_pecs_f_pompe" />

    <TextView
        android:id="@+id/pompe"
        android:layout_width="296dp"
        android:layout_height="37dp"
        android:layout_marginBottom="270dp"
        android:layout_marginEnd="64dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="64dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="200dp"
        android:text="@string/pompe_f"
        android:textColor="@color/black"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dev_couche"
        android:layout_width="299dp"
        android:layout_height="60dp"
        android:layout_marginBottom="235dp"
        android:layout_marginEnd="64dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="64dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="360dp"
        android:text="@string/dev_couche_f"
        android:textColor="@color/black"
        android:textSize="27sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cardio_bras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="380dp"
        android:layout_marginEnd="32dp"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="32dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="16dp"
        android:text="@string/course_f"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recup_abdo" />

    <TextView
        android:id="@+id/recup_abdo"
        android:layout_width="320dp"
        android:layout_height="45dp"
        android:layout_marginEnd="45dp"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="45dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="33dp"
        android:text="@string/recup_f"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/cardio_bras"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>